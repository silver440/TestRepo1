<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger - %msg%n"/>
        </Console>
 <File name="FileAppender" fileName="./src/test/java/com/test/logfiles/IndiaBazar-${date:yyyyMMdd}.log" immediateFlush="false" append="true">
    <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SS}[%t] %-5level -%msg%n"/>
  </File>
    </Appenders>
    
    <Loggers>
      <Root level="debug">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
      </Root>
      </Loggers>
    
</Configuration>
		
		
	

